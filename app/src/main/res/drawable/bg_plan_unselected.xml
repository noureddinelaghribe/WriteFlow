<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- The solid color is the main background. You can adjust it if needed. -->
    <solid android:color="@android:color/white" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- A light gray stroke/border around the shape -->
    <stroke
        android:width="1dp"
        android:color="@color/c9" />

    <!-- Optional: Add some default padding so text/components arenâ€™t flush to the edge -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
</shape>
